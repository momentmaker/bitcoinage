<%= simple_form_for @transaction do |f| %>
  <%= f.input :type, collection: ["Buy", "Sell"], as: :radio_buttons, required: true %>
  <%= f.input :bitcoin, placeholder: 'Bâƒ¦', label: 'Bitcoins' %>
  <%= f.input :price_dollar, placeholder: '$', label: 'Price' %>
